clue-button()
  -reset()
  border-radius: 3px
  box-shadow: inset 0 0 1px 1px rgba(white, 0.8)
  font-family: 'helvetica neue', helvetica, arial, sans-serif
  font-size: 12px
  font-weight: bold
  line-height: 1
  padding: 8px 0px 8px 0px
  text-align: center
  width: 20%

color-button(bg = #e3e3e3, text = #333)
  background: bg
  border: 1px solid darken(bg, 15%)
  color: text 

  &:hover
  &.hover
    background: bg - 5%
    box-shadow: inset 0 0 1px 1px rgba(white, 0.5)
    cursor: pointer
    color: text

  &:active
  &.active
    background: bg - 10%
    box-shadow: inset 0 0 1px 1px rgba(white, 0.2)
    color: text - 50%

  &:focus
  &.focus
    outline: none
    box-shadow: 0 0 5px 1px rgba(bg, 1)